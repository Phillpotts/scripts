{
    "name": "node_typescript_seed",
    "version": "0.0.1",
    "description": "A Template Repository for a NodeJS Project.",
    "author": "william.phillpotts@googlemail.com",
    "main": "./dist/index.js",
    "scripts": {
        "version:node": "node --version",
        "clean": "rm -rf ./dist ./node_modules",
        "lint": "npx eslint ./src ./test",
        "format": "npx prettier --write src/**/*.ts",
        "test": "jest",
        "test:watch": "jest --watchAll",
        "build": "tsc",
        "start": "node ./dist/index.js",
        "dev:start": "npx ts-node ./src/index.ts",
        "dev:watch:start": "npx nodemon ./src/index.ts"
    },
    "keywords": [
        "nodeJs",
        "typeScript",
        "jest",
        "nodemon",
        "ts-node",
        "prettier"
    ],
    "dependencies": {
        "@types/node": "^18.16.1",
        "nodemon": "^2.0.22",
        "ts-node": "^10.9.1"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.59.1",
        "@typescript-eslint/parser": "^5.59.1",
        "eslint": "^8.39.0",
        "jest": "^29.5.0",
        "prettier": "^2.8.8",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.4"
    }
}